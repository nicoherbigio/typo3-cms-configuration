{
  "name": "nicoherbigio/typo3-cms-configuration",
  "description": "TYPO3 CMS Configuration",

  "keywords": ["TYPO3 CMS"],
  "homepage": "https://github.com/nicoherbigio/typo3-cms-configuration",
  "license": "GPL-3.0+",

  "authors": [
    {
      "name": "Nico Herbig",
      "email": "info@nicoherbig.io",
      "homepage": "https://www.nicoherbig.io",
      "role": "Developer"
    }
  ],

  "support": {
    "issues": "https://github.com/nicoherbigio/typo3-cms-configuration/issues"
  },

  "require": {
    "typo3/cms-core": "^7.6 || ^8.7 || ^9.5"
  },

  "autoload": {
    "psr-4": {
      "NicoHerbigIo\\TYPO3\\CMS\\Configuration\\": "src/"
    }
  },

  "config": {
    "vendor-dir": ".build/vendor",
    "bin-dir": ".build/bin"
  },

  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".build/web"
    }
  }

}
